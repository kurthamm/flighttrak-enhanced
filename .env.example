# FlightTrak Environment Variables
# Copy this to .env and fill in your values

# FlightAware API
FLIGHTAWARE_API_KEY=your_flightaware_api_key_here

# SendGrid Email Configuration  
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_SENDER=your_email@example.com
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com
NOTIFICATION_EMAIL=admin@example.com

# Home Location (for distance calculations)
HOME_LAT=34.1133171
HOME_LON=-80.9024019

# Monitoring Settings
ALIVE_INTERVAL=86400
DUMP1090_HOST=127.0.0.1
DUMP1090_PORT=30002

# File Paths
AIRCRAFT_LIST_FILE=aircraft_list.json
DETECTED_AIRCRAFT_FILE=detected_aircraft.txt
LOG_FILE=flightalert.log